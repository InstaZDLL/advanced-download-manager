{
  "name": "adm-backend",
  "version": "1.0.0",
  "description": "Advanced Download Manager Backend",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "concurrently -n API,TCHECK -c cyan,yellow \"nodemon\" \"npm run typecheck:watch\"",
    "dev:simple": "nodemon",
    "worker": "nodemon --watch src --ext ts --exec \"npm run build && node dist/worker.js\"",
    "lint": "eslint src/**/*.ts",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "e2e:live": "tsx ./scripts/e2e-live.ts",
    "typecheck": "tsc -p . --noEmit --pretty",
    "typecheck:watch": "tsc -p . --noEmit --watch --pretty",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy"
  },
  "dependencies": {
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "^11.0.0",
    "@fastify/rate-limit": "^9.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-fastify": "^10.0.0",
    "@nestjs/platform-socket.io": "^10.0.0",
    "@nestjs/websockets": "^10.0.0",
    "@prisma/client": "^5.0.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@types/archiver": "^6.0.3",
    "archiver": "^7.0.1",
    "bullmq": "^5.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "execa": "^8.0.0",
    "ioredis": "^5.8.0",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "prisma": "^5.0.0",
    "reflect-metadata": "^0.1.13",
    "sanitize-filename": "^1.6.3",
    "socket.io": "^4.7.0",
    "socket.io-client": "^4.7.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/uuid": "^9.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.44.1"
  }
}
