# Backend environment example (copy to .env and adjust values)

# PostgreSQL
# Match docker/docker-compose.yml values or your deployed DB
DATABASE_URL=postgresql://${POSTGRES_USER:-adm_user}:${POSTGRES_PASSWORD:-adm_password}@localhost:5432/${POSTGRES_DB:-adm_db}?schema=public

# Redis (BullMQ queue, optional Socket.IO adapter)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=

# Socket.IO (API public namespace for clients)
SOCKET_IO_PATH=/socket.io
# Allowed origins for CORS and Socket.IO
ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173

# Worker â†’ Backend WebSocket (private namespace)
# The worker uses this URL to emit events to the server (namespace /worker)
WS_URL=http://localhost:3000
WORKER_TOKEN=change-me-strong-token

# aria2 RPC (for direct file downloads)
ARIA2_RPC_URL=http://localhost:6800/jsonrpc
ARIA2_SECRET=change-me-secret

# External tools
YTDLP_PATH=yt-dlp
FFMPEG_PATH=ffmpeg
TWMD_PATH=./bin/twitter-media-downloader
PINTEREST_DL_PATH=pinterest-dl

# Twitter options (optional)
# TWITTER_COOKIES_PATH=/path/to/cookies.txt
# TWITTER_PROXY=socks5://127.0.0.1:9050

# Pinterest options (optional)
# PINTEREST_COOKIES_PATH=/path/to/pinterest-cookies.txt

# Jobs concurrency and timeouts
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT=7200000
